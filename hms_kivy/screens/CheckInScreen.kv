#:kivy 1.0

#:set quorumNotMet (1, 0, 0, .8)
#:set quorumMet (0, 1, 0, .8)

<CheckInScreen>:
    name: "checkIn"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            padding: dp(5),dp(2),dp(5),dp(2)
            spacing: dp(5)
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: hsGreen
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'Quorum'
                    font_size: '27sp'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    size_hint: 1, 0.25
                    canvas.before:
                        Color:
                            rgba: black
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                GridLayout:
                    cols:2
                    padding: dp(2),dp(2),dp(2),dp(2)
                    spacing: dp(2)
                    canvas.before:
                        Color:
                            rgba: black
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    Label:
                        text: 'Current Members'
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                    Label:
                        text: root.currentMembers
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                        size_hint_x: 0.25
                    Label:
                        text: 'Voting Members'
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                    Label:
                        text: root.votingMembers
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                        size_hint_x: 0.25
                    Label:
                        text: 'Quorum Required'
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                    Label:
                        text: root.quorum
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                        size_hint_x: 0.25

            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: hsGreen
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'Current Attendance'
                    font_size: '27sp'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    size_hint: 1, 0.25
                    canvas.before:
                        Color:
                            rgba: black
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height

                GridLayout:
                    cols:2
                    padding: dp(2),dp(2),dp(2),dp(2)
                    spacing: dp(2)
                    canvas.before:
                        Color:
                            rgba: black
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    Label:
                        text: 'Proxies Registered'
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                    Label:
                        text: root.proxies
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                        size_hint_x: 0.25
                    Label:
                        text: 'Attendees in the room'
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                    Label:
                        text: root.attendees
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                        size_hint_x: 0.25
                    Label:
                        text: 'Proxies Represented'
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                    Label:
                        text: root.representedProxies
                        font_size: '22sp'
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                        size_hint_x: 0.25
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: hsGreen
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'Total Checked-in'
                    font_size: '27sp'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    size_hint: 1, 0.25
                    canvas.before:
                        Color:
                            rgba: black
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                Label:
                    canvas.before:
                        Color:
                            rgba: quorumMet if root.quorumMetState else quorumNotMet
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: black
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    id: total_check_in
                    text: root.checkInCount
                    font_size: '100sp'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

        Label:
            id: status
            size_hint: 1, 0.15
            text: root.statusMessage
            font_size: '35sp'
            text_size: self.size
            halign: 'center'
            valign: 'middle'