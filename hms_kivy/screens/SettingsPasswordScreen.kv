#:kivy 1.0

#:set hsGreen (0.098, 0.349, 0.02, 0.9)
#:set border (0, 0, 0, 1)

<SettingsPasswordScreen>
    name: 'settingsPassword'
    password: password

    canvas:
        Color:
            rgba: hsGreen
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            text: "Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.09, 0.15
        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.27 , "top":0.9}
            size_hint: 0.70, 0.15
            password: True
        BoxLayout:
            pos_hint:{"x":0.05,"y":0.05}
            size_hint: 0.9, 0.2

            Button:
                id: confirm
                # pos_hint:{"x":0.05,"y":0.05}
                # size_hint: 0.9, 0.2
                font_size: (root.width**2 + root.height**2) / 13**4
                text: "Confirm"
                on_release: root.on_confirm()
            Button:
                id: cancel
                # pos_hint:{"x":0.05,"y":0.05}
                # size_hint: 0.9, 0.2
                font_size: (root.width**2 + root.height**2) / 13**4
                text: "Cancel"
                on_release: root.on_cancel()