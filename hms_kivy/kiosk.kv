#:kivy 1.0

#KioskApp
GridLayout:
    rows: 2
    size_hint: 1, 1

    BoxLayout:
        size_hint_y: None
        height: dp(40)
        pos_hint: {'top': 1, 'y': 0}
        padding: 5,2,5,2
        spacing: 5
        # Button:
        #     id: logout
        #     text: "Logout"
        #     size_hint_x: 0.2
        #     disabled: True
        #     on_release:
        #         app.logout()
        BackgroundLabel:
            id: status
            text: app.status_label
            font_size: '20sp'
            size_hint_x: 0.2
            background_color: 0.2, 0.2, 0.2, 1
        Label:
            id: title
            text: app.title_label
            font_size: '35sp'
            text_size: self.size
            size_hint_x: 0.55
            halign: 'left'
            valign: 'middle'
        ClockLabel:
            id: clock_label
            size_hint: 0.25,1
            font_size: '35sp'
            text_size: self.size
            valign: 'middle'
            halign: 'right'
            on_release:
                app.open_settings_password()

    ScreenSwitcher:
        id: manager #Put an ID to your ScreenManager class

